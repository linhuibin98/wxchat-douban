/* pages/list/list.wxss */
.list-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 40rpx 40rpx 40rpx;
}
.movie-item {
  display: flex;
  flex-direction: column;
  width: 180rpx;
  margin-top: 50rpx;
}

.movie-cv {
  width: 100%;
}

.movie-cv {
  width: 100%;
  height: 240rpx;
}

.movie-name {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.movie-ss {
  display: flex;
  margin-top: 16rpx;
}

.ss-star {
  width: 20rpx;
  height: 20rpx;
}

.ss-text {
  padding-left: 12rpx;
  font-size: 22rpx;
}