/* pages/user/user.wxss */
.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 420rpx;
  background-color: #5dc76f;

}

.login-btn {
  width: 340rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #324a3c;
  border-radius: 45rpx;
  font-size: 36rpx;
}

.user-info {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.user-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
}

.user-nickname {
  display: flex;
  justify-content: center;
  margin-top: 16rpx;
  color: #fff;
}

.user-collection {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.collection-title {
  font-size: 32rpx;
  font-weight: bold;
}

.collection-tip {
  font-size: 30rpx;
  color: #aaa;
}