/* pages/search/search.wxss */
.list-container {
  padding: 30rpx 30rpx 0 30rpx;
}

.list-item {
  display: flex;
  height: 225rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #ccc;
}

.list-item-left {
  width: 122rpx;
  height: 168rpx;
}

.list-item-left-img {
  width: 100%;
  height: 100%;
  background-color: red;
}

.list-item-right {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.list-item-right-title {
  font-weight: bold;
}

.star {
  margin-top: 20rpx;
}

.list-item-right-detail {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: #a0a0a0;
}