/* components/show-lab/show-lab.wxss */

.lab-container {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 315rpx;
  margin: 28rpx;
  background-repeat: no-repeat;
  background-size: cover;
  border-radius: 8rpx;
}

.lab-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  background-color: rgb(70, 70, 80);
  opacity: 0.8;
}

.lab-ct {
  position: absolute;
  z-index: 3;
  padding: 39rpx;
}

.img-pl {
  position: relative;
  margin-top: 39rpx;
}

.lab-img {
  position: absolute;
  width: 117rpx;
  height: 165rpx;
  border-radius: 4px;
  background-size: 100%;
}

.lab-img:first-child {
  z-index: 5;
}

.lab-img:last-child {
  z-index: 4;
  left: 88rpx;
}

.lab-title {
  color: #ffedc8;
}

.lab-tx {
  position: absolute;
  left: 224rpx;
  top: 70rpx;
  color: #767776;
}